{
	"name": "cedar-dns8d",
	"version": "1.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "yarn build && companion-module-build",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phillipivan/companion-module-cedar-dns8d.git"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.2",
		"companion-module-utils": "^0.5.0",
		"fast-xml-parser": "~4.5.0",
		"p-queue": "^8.0.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.1.0",
		"@types/node": "^22.10.1",
		"eslint": "~9.15.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"prettier": "^3.4.1",
		"rimraf": "^6.0.1",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.11"
	},
	"packageManager": "yarn@4.5.3"
}
